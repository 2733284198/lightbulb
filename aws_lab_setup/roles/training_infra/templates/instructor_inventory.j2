[all:vars]
ansible_ssh_user={{ login }}



{% for user in users %}
[{{ user.username }}]
{% set counter = -1 %}
{% for host in groups.managed_hosts %}
{% if user.username in host %}
{% set counter = counter + 1 %}
{% if 'control' in host %}
{{ user.username }}_control ansible_ssh_host={{ hostvars[host]['ansible_ssh_host'] }}
{% else %}
{% if 'node' in host %}
{{ user.username }}_node-{{counter}} ansible_ssh_host={{ hostvars[host]['ansible_ssh_host'] }}
{% elif 'haproxy' in host %}
{{ user.username }}_haproxy ansible_ssh_host={{ hostvars[host]['ansible_ssh_host'] }}
{% endif %}
{% endif %}
{% endif %}
{% endfor %}

{% endfor %}
